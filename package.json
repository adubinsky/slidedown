  },
  "license": "AGPL-3.0",
  "keywords": [
    "slidedown",
    "slides",
    "presentation",
    "markdown",
    "react",
    "vite",
    "cli",
    "mcp"
  ],
  "scripts": {
    "dev": "cd app && npm run dev",
    "build": "cd app && npm run build",
    "preview": "cd app && npm run preview",
