{
  "name": "slidedown",
  "version": "2.0.0",
  "description": "Modern markdown presentations with a custom React renderer",
  "type": "module",
  "bin": {
    "slidedown": "./cli.js"
  },
  "homepage": "https://github.com/adubinsky/slidedown",
  "author": {
    "name": "Andrew Dubinsky",
    "email": "adubinsky@gmail.com",
